<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Widget颜色 - 使用Material Design 3标准颜色 -->
    <!-- Android 12+将自动使用系统动态颜色（在values-v31中定义） -->
    
    <!-- 背景色 - 浅色模式 -->
    <color name="widget_background">@android:color/system_neutral1_50</color>
    <color name="widget_surface">@android:color/system_neutral1_100</color>
    
    <!-- 文本颜色 -->
    <color name="widget_text_primary">@android:color/system_neutral1_900</color>
    <color name="widget_text_secondary">@android:color/system_neutral1_700</color>
    
    <!-- 主题色 -->
    <color name="widget_primary">@android:color/system_accent1_500</color>
    <color name="widget_on_primary">@android:color/system_accent1_0</color>
    
    <!-- 表面装饰颜色 -->
    <color name="widget_surface_variant">@android:color/system_neutral2_100</color>
    <color name="widget_outline">@android:color/system_neutral1_400</color>
</resources>
