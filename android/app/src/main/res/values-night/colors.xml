<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Widget颜色 - 深色模式 -->
    <!-- Android 12+将自动使用系统动态颜色 -->
    
    <!-- 背景色 - 深色模式 -->
    <color name="widget_background">@android:color/system_neutral1_900</color>
    <color name="widget_surface">@android:color/system_neutral1_800</color>
    
    <!-- 文本颜色 -->
    <color name="widget_text_primary">@android:color/system_neutral1_50</color>
    <color name="widget_text_secondary">@android:color/system_neutral1_200</color>
    
    <!-- 主题色 -->
    <color name="widget_primary">@android:color/system_accent1_200</color>
    <color name="widget_on_primary">@android:color/system_accent1_800</color>
    
    <!-- 表面装饰颜色 -->
    <color name="widget_surface_variant">@android:color/system_neutral2_800</color>
    <color name="widget_outline">@android:color/system_neutral1_600</color>
</resources>
